<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/resultImageViewLogo"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/logo_watch_list" />
        <ImageView
            android:id="@+id/resultImageViewResult"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginBottom="0dp"/>
            <!--app:srcCompat="@drawable/logo_watch_list"-->
        <TextView
            android:id="@+id/resultTextViewMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:paddingTop="10dp"
            android:text="Title"
            android:textColor="#FAD0E1"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/resultTextViewMovieGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingBottom="20dp"
            android:fontFamily="sans-serif"
            android:paddingTop="0dp"
            android:text="Genre"
            android:textColor="#FAD0E1"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/resultButtonAddWatchlist"
            android:text="Add to my Watchlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_edit_top"
            android:textAllCaps="false"
            android:padding="15dp" />
        <Button
            android:id="@+id/resultButtonAnotherResult"
            android:text="Another result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_edit_middle"
            android:textAllCaps="false"
            android:padding="15dp" />

        <Button
            android:id="@+id/resultButtonHome"
            android:text="Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_edit_bottom"
            android:textAllCaps="false"
            android:padding="15dp" />


    </LinearLayout>

</RelativeLayout>